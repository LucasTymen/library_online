<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>Exaustive List of Books</h1>
  <%= link_to "New book", new_book_path %>


  <hr />
  <table class="table table-hover">

    <thead>
      <tr>
        <th>Title</th>
        <th>Autor</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <div id="books" class="container">
        <% @books.each do |book| %>
        <tr>
          <%= render book %>
          <p>
            <%= link_to "Show this book", book %>
          </p>
        </tr>
        <% end %>
      </div>

    </tbody>
  </table>
</div>
